{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  }, 
  "include": [
    "client-src/**/*", 
    "server/**/*"
  ], 
  "exclude": ["dist", "node_modules"]
}